<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blackPrimary</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="ButtonSolid">
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/btn_solid</item>
        <item name="android:textColor">@color/whitePrimary</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.0</item>
    </style>
</resources>
